{% extends 'Layout/main.html.twig' %}


{% block title %}{{ parent() ~ seo_title }}{% endblock %}


{% block body %}
<div class="container">

<div class="row">
    {% for recipe in recipes %}
        <div class="col-l-3">
            <a href="{{ recipe.slug }}">
                <div class="card  animate__animated animate__backInLeft">
                    <div class="card__picture" style="background-image: url('/assets/img/{{ recipe.picture }}'); background-size: cover;">
                    </div>
                    <h3 class="text-align-center mt1">{{ recipe.name }}</h3>
                    <a href="{{ url_for('recipe.delete',{slug:recipe.slug}) }}" class="btn btn__primary-link">Supprimer</a>
                </div>
            </a>
        </div>
    {% endfor %}
</div>

</div>




{% endblock %}