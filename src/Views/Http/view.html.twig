{% extends 'Layout/main.html.twig' %}


{% block title %}{{ parent() ~ seo_title }}{% endblock %}


{% block body %}
<div class="container">
    <div class="row">
        <div class="col-l-4">
            <img src="/assets/img/{{ recipe.picture }}" width="100%" alt="">
        </div>
        <div class="col-l-8">
        </div>
    </div>
    <h1>{{ recipe.name }}</h1>

    <div class="ingredients">
        <h2>Ingredients</h2>
        {% for ingredient in recipe.ingredients %}
            <div class="p1">
                barcode: {{ ingredient.barcode }}<br>
                name : {{ ingredient.name }}<br>
                quantity : {{ ingredient.quantity }}
            </div>
        {% endfor %}
    </div>
    <div class="recipe">
        <h2>Recette</h2>
        {{ recipe.body|raw }}
    </div>


</div>




{% endblock %}